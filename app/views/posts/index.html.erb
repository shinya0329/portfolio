<% @posts.each do |post| %>
  <div>
  <%= link_to post_path(post.id) do %>
    <% if post.image.attached? %>
      <%= image_tag post.image %>
    <% else %>
      <%= image_tag 'about_photo1.jpg' %>
    <% end %>
  <% end %>    
    <p>投稿ユーザー画像：<%= image_tag('about_photo1.jpg') %></p>
    <p>ショップ名：<%= post.shop_name %></p>
    <p>説明：<%= post.caption %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
    
    <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
  </div>
<% end %>

<%= paginate @post %>