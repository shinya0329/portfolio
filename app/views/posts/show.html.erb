<div>
  <% if @post.image.attached? %>
    <%= image_tag @post.image %>
  <% else %>
    <%= image_tag 'about_photo1.jpg' %>
  <% end %>
  <p>ショップ名：<%= @post.shop_name %></p>
  <p>説明：<%= @post.caption %></p>
  <p>投稿ユーザー画像：<%= image_tag 'about_photo1.jpg' %></p>
  <p>ユーザーネーム：<%= @post.user.name %></p>
  <p>投稿日：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>